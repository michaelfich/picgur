<header>
  <h1>Update Picture!</h1>
</header>

<%= form_for @image do |f| %>

  <div class="field textbox">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "The name of the picture." %>
  </div>

  <div class="field textbox">
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: "What is your name?" %>
  </div>

  <div class="field textbox">
    <%= f.label :url %>
    <%= f.text_field :url, placeholder: "http://www.example.com" %>
  </div>

  <div class="field textarea">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Describe the image." %>
  </div>

  <div class="field">
    <%= f.button "Update picture!", :class => "blue" %>
  </div>

<% end %>

<%= link_to "Delete", image_path(@image), method: :delete, data: {confirm: "Are you sure you want to delete this picture?"}  %>
